<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50%"
    android:pivotY="50%"
    android:fromDegrees="0"
    android:toDegrees="1080">
    <layer-list>
        <item>
            <shape android:shape="oval">
                <size
                    android:height="4dp"
                    android:width="64dp"/>
                <stroke
                    android:width="4dp"
                    android:color="@color/colorAccent"/>
            </shape>
        </item>
        <item>
            <shape android:shape="oval">
                <size
                    android:height="64dp"
                    android:width="64dp"/>
                <stroke
                    android:width="4dp"
                    android:dashGap="150dp"
                    android:dashWidth="20dp"
                    android:color="@color/colorPrimary"/>
            </shape>
        </item>
    </layer-list>
</rotate>